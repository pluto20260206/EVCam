<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Main content container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Recording interface -->
        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#000000">

    <!-- 日志面板 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#1A1A1A">

        <!-- 日志标题栏 -->
        <LinearLayout
            android:id="@+id/log_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="#2A2A2A"
            android:clickable="true"
            android:focusable="true">

            <Button
                android:id="@+id/btn_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="☰"
                android:textSize="18sp"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:layout_marginEnd="8dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日志"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/log_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="▼"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- 日志内容区域 -->
        <ScrollView
            android:id="@+id/log_scroll"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#000000"
            android:visibility="gone">

            <TextView
                android:id="@+id/log_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="#00FF00"
                android:textSize="10sp"
                android:fontFamily="monospace"
                android:text="日志信息将显示在这里..." />
        </ScrollView>
    </LinearLayout>

    <!-- 上半部分：前、后摄像头 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- 前摄像头 -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:gravity="center">

            <com.test.cam.AutoFitTextureView
                android:id="@+id/texture_front"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="前"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:padding="8dp"
                android:background="#80000000"
                android:layout_gravity="top|start" />
        </FrameLayout>

        <!-- 后摄像头 -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:gravity="center">

            <com.test.cam.AutoFitTextureView
                android:id="@+id/texture_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="后"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:padding="8dp"
                android:background="#80000000"
                android:layout_gravity="top|start" />
        </FrameLayout>
    </LinearLayout>

    <!-- 下半部分：左、右摄像头 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- 左摄像头 -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:gravity="center">

            <com.test.cam.AutoFitTextureView
                android:id="@+id/texture_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="左"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:padding="8dp"
                android:background="#80000000"
                android:layout_gravity="top|start" />
        </FrameLayout>

        <!-- 右摄像头 -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:gravity="center">

            <com.test.cam.AutoFitTextureView
                android:id="@+id/texture_right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="右"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:padding="8dp"
                android:background="#80000000"
                android:layout_gravity="top|start" />
        </FrameLayout>
    </LinearLayout>

    <!-- 控制按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#1A1A1A">

        <Button
            android:id="@+id/btn_start_record"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="开始录制"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_stop_record"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="停止录制"
            android:enabled="false"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>

        <!-- Fragment container for playback -->
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </FrameLayout>

    <!-- Navigation drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/navigation_menu" />

</androidx.drawerlayout.widget.DrawerLayout>